@model OnlineTrainTicketBookingMVC.Models.UserViewModel

@{
    ViewBag.Title = "EditProfile";
}

<h2>EditProfile</h2>
@using (Html.BeginForm("EditProfile", "User", FormMethod.Post))
{
   
    <table class="box">
        <tr>
            @Html.HiddenFor(modelItem => Model.UserId)
            @Html.HiddenFor(modelItem => Model.FirstName)
            @Html.HiddenFor(modelItem => Model.LastName)
            @Html.HiddenFor(modelItem => Model.Age)
            @Html.HiddenFor(modelItem => Model.Sex)           
            @Html.HiddenFor(modelItem => Model.Password)
            @Html.HiddenFor(modelItem => Model.ConfirmPassword)
            @Html.HiddenFor(modelItem => Model.Role)
            @Html.HiddenFor(modelItem => Model.IsActive)
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(Model => Model.MobileNumber)
            </td>
            <td>
                @Html.EditorFor(Model => Model.MobileNumber)
                @Html.ValidationMessageFor(M => M.MobileNumber, "", new { @class = "validationMsg" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(Model => Model.Email)
            </td>
            <td>
                @Html.EditorFor(Model => Model.Email)
                @Html.ValidationMessageFor(M => M.Email, "", new { @class = "validationMsg" })
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="Update" id="btnSubmit" class="btn"></td>
        </tr>
        <tr>@Html.ActionLink("Back to Profile", "ViewProfile")</tr>
    </table>
}
