                @Html.EditorFor(Model => Model.SourceStation)
                @Html.ValidationMessageFor(M => M.SourceStation, "", new { @class = "validationMsg" })
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(Model => Model.DestinationStation)</td>
            <td>
                @Html.EditorFor(Model => Model.DestinationStation)
                @Html.ValidationMessageFor(M => M.DestinationStation, "", new { @class = "validationMsg" })
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(Model => Model.DepartureTime)</td>
            <td>
                @Html.EditorFor(Model => Model.DepartureTime)
                @Html.ValidationMessageFor(M => M.DepartureTime, "", new { @class = "validationMsg" })
