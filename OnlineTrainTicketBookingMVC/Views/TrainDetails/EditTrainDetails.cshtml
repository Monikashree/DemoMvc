                @Html.EditorFor(Model => Model.TrainNo)
                @Html.ValidationMessageFor(M => M.TrainNo, "", new { @class = "validationMsg" })
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(Model => Model.TrainName)</td>
            <td>
                @Html.EditorFor(Model => Model.TrainName)
