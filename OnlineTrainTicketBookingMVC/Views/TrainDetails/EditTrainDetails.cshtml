@model OnlineTrainTicketBookingMVC.Models.TrainDetailsViewModel

@{
    ViewBag.Title = "EditTrainDetails";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<h2>EditTrainDetails</h2>
@using (Html.BeginForm("EditTrainDetails", "TrainDetails", FormMethod.Post))
{
    @Html.AntiForgeryToken()
   
